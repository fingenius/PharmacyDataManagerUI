<%-include('../partials/head')%>

<body class="bg-[#f7f9fb] font-sans text-[#333]">
  
  <%-include('../partials/navbar')%>
  <main class="px-6 sm:px-12 md:px-20 lg:px-32 py-8">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-[#007B8A]">Pharmacy Drugs</h1>
      <div class="space-x-3">
        <button onclick="toggleAddPharmacyDrugModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Add Pharmacy Drug
        </button>
        <button onclick="toggleDeletePharmacyDrugModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Delete Pharmacy Drug
        </button>
        <button onclick="toggleUpdatePharmacyDrugModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Update Pharmacy Drug
        </button>
      </div>
    </div>  
  <!-- Add Pharmacy Drug Modal -->
    <div id="addPharmacyDrugModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleAddPharmacyDrugModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Add Pharmacy Drug</h2>
        <hr class="mb-6" />

        <form action="/pharmacy-drugs" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="add" />
          <div>
            <label for="pharma_name" class="block font-medium text-gray-700">Pharmacy</label>
            <input type="text" name="PHANAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="pharma_address" class="block font-medium text-gray-700">Pharmacy Address</label>
            <input type="text" name="PHA_ADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="pha_company" class="block font-medium text-gray-700">Pharmaceutical Company</label>
            <input type="text" name="PHARMA_COMPANY" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="drug_name" class="block font-medium text-gray-700">Drug Name</label>
            <input type="text" name="DRUG_NAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="price" class="block font-medium text-gray-700">Price</label>
            <input type="number" name="PRICE" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Delete Pharmacy Drug Modal -->
    <div id="deletePharmacyDrugModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleDeletePharmacyDrugModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Delete Pharmacy Drug</h2>
        <hr class="mb-6" />

        <form action="/pharmacy-drugs" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="delete" />
          <div>
            <label for="pharma_name" class="block font-medium text-gray-700">Pharmacy</label>
            <input type="text" name="PHANAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="pharma_address" class="block font-medium text-gray-700">Pharmacy Address</label>
            <input type="text" name="PHA_ADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="pha_company" class="block font-medium text-gray-700">Pharmaceutical Company</label>
            <input type="text" name="PHARMA_COMPANY" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="drug_name" class="block font-medium text-gray-700">Drug Name</label>
            <input type="text" name="DRUG_NAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Update Pharmacy Drug Modal -->
    <div id="updatePharmacyDrugModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleUpdatePharmacyDrugModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Update Pharmacy Drug</h2>
        <hr class="mb-6" />

        <form action="/pharmacy-drugs" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="update" />
          <div>
            <label for="pharma_name" class="block font-medium text-gray-700">Pharmacy</label>
            <input type="text" name="PHANAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="pharma_address" class="block font-medium text-gray-700">Pharmacy Address</label>
            <input type="text" name="PHA_ADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="pha_company" class="block font-medium text-gray-700">Pharmaceutical Company</label>
            <input type="text" name="PHARMA_COMPANY" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="drug_name" class="block font-medium text-gray-700">Drug Name</label>
            <input type="text" name="DRUG_NAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="price" class="block font-medium text-gray-700">Price</label>
            <input type="number" name="PRICE" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>

    <!--pharmacy_drug_stock-->
    <form action="/pharmacy-drugs" method="GET" class="mb-6 flex w-1/2 gap-4 items-center">
      <input type="text" name="pharmacy_name" placeholder="Pharmacy Name"
          class="px-4 py-2 border rounded w-full max-w-md focus:outline-none focus:ring focus:border-[#007B8A]"
          value="<%= pharmacy_name || '' %>" required/>

      <input type="text" name="pharmacy_address" placeholder="Pharmacy Address"
          class="px-4 py-2 border rounded w-full max-w-md focus:outline-none focus:ring focus:border-[#007B8A]"
          value="<%= pharmacy_address || '' %>" required/>

      <% if (pharmacy_name && pharmacy_address) { %>
        <a href="/pharmacy-drugs" class="text-sm text-red-600 ">‚ùå</a>
      <% } %>

      <button type="submit" class="bg-[#007B8A] text-white px-4 py-2 rounded hover:bg-[#006374] transition">
        Search
      </button>
    </form>

    <!-- Patient Table -->
    <div class="mt-10 overflow-x-auto bg-white rounded-lg shadow-lg">
      <% if (pharmacy_name && pharmacy_address) { %>
      <div class="text-gray-600 bg-[#f7f9fb] text-sm shadow-none mb-1">
          Showing drugs for pharmacy: <strong><%= pharmacy_name %></strong> at <strong><%= pharmacy_address %></strong>
        </div>
      <% } %>
      <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead class="bg-[#007B8A] text-white uppercase tracking-wider">
          <tr>
            <th class="w-1/5 px-6 py-3 text-center">Pharmacy</th>
            <th class="w-1/5 px-6 py-3 text-center">Pharmacy Address</th>
            <th class="w-1/5 px-6 py-3 text-center">Pharmaceutical Company</th>
            <th class="w-1/5 px-6 py-3 text-center">Drug Name</th>
            <th class="w-1/5 px-6 py-3 text-center">Price</th>
          </tr> 
        </thead>
        <tbody class="min-w-full divide-y divide-gray-100 text-gray-700">
          <% if (pharmacy_Drugs.length === 0) { %>
            <tr>
              <td colspan="5" class="text-center py-6 text-gray-500">No pharmacy contracts found.</td>
            </tr>
          <% } else { %>
            <% pharmacy_Drugs.forEach(pharmacy_Drug => { %>
            <tr class="hover:bg-gray-50 transition">
              <td class="w-1/5 px-6 py-3 text-center"><%= pharmacy_Drug.PHANAME %></td>
              <td class="w-1/5 px-6 py-3 text-center"><%= pharmacy_Drug.PHA_ADDRESS %></td>
              <td class="w-1/5 px-6 py-3 text-center"><%= pharmacy_Drug.PHARMA_COMPANY %></td>
              <td class="w-1/5 px-6 py-3 text-center"><%= pharmacy_Drug.DRUG_NAME %></td>
              <td class="w-1/5 px-6 py-3 text-center"><%= pharmacy_Drug.PRICE %></td>
            </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
    
    <% if (toast) { %>
      <div id="toast"
        class="fixed bottom-5 right-5 z-50 px-6 py-3 rounded shadow-lg text-white transition-opacity duration-300
        <%= (toast.type === 'error' || (toast.message[0] === 'E' && toast.message[1] === 'r')) ? 'bg-red-600' : 'bg-green-600' %>">
        <%= toast.message %>
        <button onclick="this.parentElement.style.display='none'" class="ml-4 text-white font-bold">√ó</button>
      </div>
    <% } %>
  </main>

  <script>
    function toggleAddPharmacyDrugModal() {
      const modal = document.getElementById("addPharmacyDrugModal");
      modal.classList.toggle("hidden");
    }
    function toggleDeletePharmacyDrugModal() {
      const modal = document.getElementById("deletePharmacyDrugModal");
      modal.classList.toggle("hidden");
    }
    function toggleUpdatePharmacyDrugModal() {
      const modal = document.getElementById("updatePharmacyDrugModal");
      modal.classList.toggle("hidden");
    }
    setTimeout(() => {
      const toast = document.getElementById("toast");
      if (toast){ 
        toast.style.opacity = "0";
        setTimeout(() => {
          toast.style.display = "none";
        }, 300);
      }
    }, 4000);
  </script>


</body>
</html>