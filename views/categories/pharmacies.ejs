<%-include('../partials/head')%>

<body class="bg-[#f7f9fb] font-sans text-[#333]">
  
  <%-include('../partials/navbar')%>
  <main class="px-6 sm:px-12 md:px-20 lg:px-32 py-8">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-[#007B8A]">Pharmacies</h1>
      <div class="space-x-3">
        <button onclick="toggleAddPharmacyModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Add Pharmacy
        </button>
        <button onclick="toggleDeletePharmacyModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Delete Pharmacy
        </button>
        <button onclick="toggleUpdatePharmacyModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Update Pharmacy
        </button>
      </div>
    </div>

    <!-- Add Pharmacy Modal -->
    <div id="addPharmacyModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleAddPharmacyModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Add Pharmacy</h2>
        <hr class="mb-6" />

        <form action="/pharmacies" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="add" />
          <div>
            <label for="name" class="block font-medium text-gray-700">Name</label>
            <input type="text" name="PHNAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="location" class="block font-medium text-gray-700">Address</label>
            <input type="text" name="PHADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="phone" class="block font-medium text-gray-700">Phone Number</label>
            <input type="text" name="PHPHONE" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Delete Pharmacy Modal -->
    <div id="deletePharmacyModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleDeletePharmacyModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Delete Pharmacy</h2>
        <hr class="mb-6" />

        <form action="/pharmacies" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="delete" />
          <div>
            <label for="name" class="block font-medium text-gray-700">Name</label>
            <input type="text" name="PHNAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="location" class="block font-medium text-gray-700">Address</label>
            <input type="text" name="PHADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Update Pharmacy Modal -->
    <div id="updatePharmacyModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleUpdatePharmacyModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Update Pharmacy</h2>
        <hr class="mb-6" />

        <form action="/pharmacies" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="update" />
          <div>
            <label for="name" class="block font-medium text-gray-700">Name</label>
            <input type="text" name="PHNAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="location" class="block font-medium text-gray-700">Address</label>
            <input type="text" name="PHADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="phone" class="block font-medium text-gray-700">Phone Number</label>
            <input type="text" name="PHPHONE" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- Pharmacy Table -->
    <div class="mt-10 overflow-x-auto bg-white rounded-lg shadow-lg">
      <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead class="bg-[#007B8A] text-white uppercase tracking-wider">
          <tr>
            <th class="w-1/3 px-6 py-3 text-center">Name</th>
            <th class="w-1/3 px-6 py-3 text-center">Address</th>
            <th class="w-1/3 px-6 py-3 text-center">Phone Number</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-gray-100 text-gray-700">
          <% if (pharmacies.length === 0) { %>
            <tr>
              <td colspan="4" class="text-center py-6 text-gray-500">No pharmacies found.</td>
            </tr>
          <% } else { %>
            <% pharmacies.forEach(pharmacy => { %>
            <tr class="hover:bg-gray-50 transition">
              <td class="w-1/3 px-6 py-3 text-center"><%= pharmacy.PHNAME %></td>
              <td class="w-1/3 px-6 py-3 text-center"><%= pharmacy.PHADDRESS %></td>
              <td class="w-1/3 px-6 py-3 text-center"><%= pharmacy.PHPHONE %></td>
            </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
    <% if (toast) { %>
      <div id="toast"
        class="fixed bottom-5 right-5 z-50 px-6 py-3 rounded shadow-lg text-white transition-opacity duration-300
        <%= (toast.type === 'error' || (toast.message[0] === 'E' && toast.message[1] === 'r')) ? 'bg-red-600' : 'bg-green-600' %>">
        <%= toast.message %>
        <button onclick="this.parentElement.style.display='none'" class="ml-4 text-white font-bold">Ã—</button>
      </div>
    <% } %>
  </main>
  <script>
    function toggleAddPharmacyModal() {
      const modal = document.getElementById('addPharmacyModal');
      modal.classList.toggle('hidden');
    }

    function toggleDeletePharmacyModal() {
      const modal = document.getElementById('deletePharmacyModal');
      modal.classList.toggle('hidden');
    }

    function toggleUpdatePharmacyModal() {
      const modal = document.getElementById('updatePharmacyModal');
      modal.classList.toggle('hidden');
    }
    setTimeout(() => {
      const toast = document.getElementById("toast");
      if (toast){ 
        toast.style.opacity = "0";
        setTimeout(() => {
          toast.style.display = "none";
        }, 300);
      }
    }, 4000);
  </script>
</body>
</html>