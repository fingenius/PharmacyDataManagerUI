<%-include('../partials/head')%>

<body class="bg-[#f7f9fb] font-sans text-[#333]">
  
  <%-include('../partials/navbar')%>
  <main class="px-6 sm:px-12 md:px-20 lg:px-32 py-8">
    <!-- Page Header -->
    <div class="flex justify-between items-center mb-6">
      <h1 class="text-3xl font-bold text-[#007B8A]">Patients</h1>
      <div class="space-x-3">
        <button onclick="toggleAddPatientModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Add Patient
        </button>
        <button onclick="toggleDeletePatientModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Delete Patient
        </button>
        <button onclick="toggleUpdatePatientModal()" class="bg-[#007B8A] text-white px-4 py-2 rounded-md hover:bg-[#006374] transition">
          Update Patient
        </button>
      </div>
    </div>

    <!-- Add Patient Modal -->
    <div id="addPatientModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleAddPatientModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Add Patient</h2>
        <hr class="mb-6" />

        <form action="/patients" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="add" />
          <div>
            <label for="id" class="block font-medium text-gray-700">ID</label>
            <input type="number" name="PAID" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="name" class="block font-medium text-gray-700">Name</label>
            <input type="text" name="PNAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="address" class="block font-medium text-gray-700">Address</label>
            <input type="text" name="PADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="age" class="block font-medium text-gray-700">Age</label>
            <input type="number" name="PAGE" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="primary_physician" class="block font-medium text-gray-700">Primary Physician</label>
            <input type="number" name="PRIMARY_PHYSICIAN" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Delete Patient Modal -->
    <div id="deletePatientModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleDeletePatientModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Delete Patient</h2>
        <hr class="mb-6" />

        <form action="/patients" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="delete" />
          <div>
            <label for="id" class="block font-medium text-gray-700">ID</label>
            <input type="number" name="PAID" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>
    <!-- Update Patient Modal -->
    <div id="updatePatientModal" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-start pt-20 z-50 hidden">
      <div class="bg-white w-full max-w-xl rounded-lg shadow-lg p-8 relative max-h-[90vh] overflow-y-auto">
        <button onclick="toggleUpdatePatientModal()" class="absolute top-4 right-4 text-gray-600 text-xl hover:text-red-600">&times;</button>

        <h2 class="text-xl font-semibold text-[#007B8A] mb-4 text-center">Update Patient</h2>
        <hr class="mb-6" />

        <form action="/patients" method="POST" class="space-y-4">
          <input type="hidden" name="action" value="update" />
          <div>
            <label for="id" class="block font-medium text-gray-700">ID</label>
            <input type="number" name="PAID" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="name" class="block font-medium text-gray-700">Name</label>
            <input type="text" name="PNAME" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="address" class="block font-medium text-gray-700">Address</label>
            <input type="text" name="PADDRESS" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="age" class="block font-medium text-gray-700">Age</label>
            <input type="number" name="PAGE" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div>
            <label for="primary_physician" class="block font-medium text-gray-700">Primary Physician</label>
            <input type="number" name="PRIMARY_PHYSICIAN" required class="w-full px-3 py-2 border rounded focus:outline-none focus:ring focus:border-[#007B8A]" />
          </div>
          <div class="text-right">
            <button type="submit" class="bg-[#007B8A] text-white px-5 py-2 rounded hover:bg-[#006374] transition">
              Submit
            </button>
          </div>
        </form>
      </div>
    </div>

    <!--get_patients_list-->
    <form action="/patients" method="GET" class="mb-6 flex gap-4 items-center">
      <input type="text" name="doctorID" placeholder="Search by doctor ID"
            class="px-4 py-2 border rounded w-full max-w-md focus:outline-none focus:ring focus:border-[#007B8A]"
            value="<%= doctorID || '' %>"/>

      <% if (doctorID) { %>
        <a href="/patients" class="text-sm text-red-600 ">❌</a>
      <% } %>

      <button type="submit"
              class="bg-[#007B8A] text-white px-4 py-2 rounded hover:bg-[#006374] transition">
        Search
      </button>
    </form>

    <!-- Patient Table -->
    <div class="mt-10 overflow-x-auto bg-white rounded-lg shadow-lg">
      <% if (doctorID) { %>
        <div class="text-gray-600 bg-[#f7f9fb] text-sm shadow-none mb-1">
          Showing results for: <strong><%= doctorID %></strong>
        </div>
      <% } %>
      <table class="min-w-full divide-y divide-gray-200 text-sm">
        <thead class="bg-[#007B8A] text-white uppercase tracking-wider">
          <tr>
            <th class="w-1/6 px-6 py-3 text-center">ID</th>
            <th class="w-1/6 px-6 py-3 text-center">Name</th>
            <th class="px-6 py-3 text-center">Address</th>
            <th class="w-1/6 px-6 py-3 text-center">Age</th>
            <th class="w-1/6 px-6 py-3 text-center">Primary Physician</th>
          </tr> 
        </thead>
        <tbody class="min-w-full divide-y divide-gray-100 text-gray-700">
          <% if (patients.length === 0) { %>
            <tr>
              <td colspan="5" class="text-center py-6 text-gray-500">No patients found.</td>
            </tr>
          <% } else { %>
            <% patients.forEach(patient => { %>
            <tr class="hover:bg-gray-50 transition">
              <td class="w-1/6 px-6 py-3 text-center"><%= patient.PAID %></td>
              <td class="w-1/6 px-6 py-3 text-center"><%= patient.PNAME %></td>
              <td class="px-6 py-3 text-center"><%= patient.PADDRESS %></td>
              <td class="w-1/6 px-6 py-3 text-center"><%= patient.PAGE %> yrs</td>
              <td class="w-1/6 px-6 py-3 text-center"><%= patient.PRIMARY_PHYSICIAN %></td>
            </tr>
          <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
    
    <% if (toast) { %>
      <div id="toast"
        class="fixed bottom-5 right-5 z-50 px-6 py-3 rounded shadow-lg text-white transition-opacity duration-300
        <%= (toast.type === 'error' || (toast.message[0] === 'E' && toast.message[1] === 'r')) ? 'bg-red-600' : 'bg-green-600' %>">
        <%= toast.message %>
        <button onclick="this.parentElement.style.display='none'" class="ml-4 text-white font-bold">×</button>
      </div>
    <% } %>
  </main>

  <script>
    function toggleAddPatientModal() {
      const modal = document.getElementById("addPatientModal");
      modal.classList.toggle("hidden");
    }
    function toggleDeletePatientModal() {
      const modal = document.getElementById("deletePatientModal");
      modal.classList.toggle("hidden");
    }
    function toggleUpdatePatientModal() {
      const modal = document.getElementById("updatePatientModal");
      modal.classList.toggle("hidden");
    }
    setTimeout(() => {
      const toast = document.getElementById("toast");
      if (toast){ 
        toast.style.opacity = "0";
        setTimeout(() => {
          toast.style.display = "none";
        }, 300);
      }
    }, 4000);
  </script>
</body>
</html>